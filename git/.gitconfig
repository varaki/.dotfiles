[user]
    name = varaki
    email = varady.akos@gmail.com
[credential]
    helper = store
[core]
    pager = less -iFRSX
    editor = nvim
[color]
    ui = true
[alias]
    co = checkout
    cobr = checkout -b
    cp = cherry-pick
    cpc = cherry-pick --continue
    br = branch
    bra = branch -avv
    ci = commit
    st = status
    last = log -1 HEAD
    repo = remote show origin
    lg = log --color --oneline --graph --pretty=format:'%Cred%h%Creset - %s %Cgreen(%ci) %C(bold blue)<%an>%Creset %C(cyan)(%G?)%Creset%C(yellow)%d%Creset'
    tree = log --graph --all --pretty=oneline --decorate
    find = branch --remote --contains
    stal = stash list
    stap = stash pop
    showfiles = show --pretty="" --name-only
    cdiff = diff --cached
    wdiff = diff --ignore-all-space
    padd = add -p
[diff]
    tool = nvim -d
    colorMoved = zebra
[difftool]
    prompt = false
[merge]
    tool = vim_mergetool
    conflictStyle = diff3
[mergetool "vim_mergetool"]
    cmd = nvim -f -c "MergetoolStart" "$MERGED" "$BASE" "$LOCAL" "$REMOTE"
    trustExitCode = true
[init]
    defaultBranch = main
